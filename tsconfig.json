{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "module": "esnext",
        "target": "es3",
        "sourceMap": true,
        "strict": true,
        "jsx": "react",
        "moduleResolution": "node",
        // This enables some imports such as "import React from 'react'".
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "exclude": [
        "node_modules"
    ]
}